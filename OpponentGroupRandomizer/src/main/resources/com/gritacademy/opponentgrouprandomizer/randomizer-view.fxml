             <TitledPane animated="false" text="untitled 1">
                  <content>
                     <AnchorPane prefHeight="200.0" prefWidth="200.0" />
                  </content>
               </TitledPane>
             <TitledPane animated="false" text="untitled 2">
                  <content>
                     <AnchorPane prefHeight="200.0" prefWidth="200.0" />
                  </content>
               </TitledPane>
           </panes>
         </Accordion>
         <Accordion fx:id="rightTitled">
           <panes>
             <TitledPane animated="false" text="untitled 1">
                  <content>
                     <AnchorPane prefHeight="200.0" prefWidth="200.0" />
                  </content>
             </TitledPane>
             <TitledPane animated="false" text="untitled 2">
                  <content>
                     <AnchorPane prefHeight="200.0" prefWidth="200.0" />
                  </content>
             </TitledPane>
           </panes>
         </Accordion>
